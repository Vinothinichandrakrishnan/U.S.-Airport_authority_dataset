Total Flights = COUNT(FLIGHT_TABLE[FL_DATE])

Total Flights by Airport = CALCULATE(COUNTROWS(FLIGHT_TABLE),ALLEXCEPT(FLIGHT_TABLE, FLIGHT_TABLE[ORIGIN])) + CALCULATE(COUNTROWS(FLIGHT_TABLE),ALLEXCEPT(FLIGHT_TABLE, FLIGHT_TABLE[DEST]))

Total Flights by Carrier = CALCULATE(COUNTROWS(FLIGHT_TABLE),ALLEXCEPT(FLIGHT_TABLE,FLIGHT_TABLE[OP_CARRIER]))

Total Flights by Day = CALCULATE(COUNTROWS(FLIGHT_TABLE),ALLEXCEPT(FLIGHT_TABLE,FLIGHT_TABLE[FL_DATE]))

Total Late Aircraft Delay = SUMX(FLIGHT_TABLE, IF(FLIGHT_TABLE[CANCELLED] = 0, FLIGHT_TABLE[LATE_AIRCRAFT_DELAY], 0))

Total NAS Delay = SUMX(FLIGHT_TABLE, IF(FLIGHT_TABLE[CANCELLED] = 0, FLIGHT_TABLE[NAS_DELAY], 0))

Total Security Delay = SUMX(FLIGHT_TABLE, IF(FLIGHT_TABLE[CANCELLED] = 0, FLIGHT_TABLE[SECURITY_DELAY], 0))

Total Weather Delay = SUMX(FLIGHT_TABLE, IF(FLIGHT_TABLE[CANCELLED] = 0, FLIGHT_TABLE[WEATHER_DELAY], 0))

Total Carrier Delay = SUMX(FLIGHT_TABLE, IF(FLIGHT_TABLE[CANCELLED] = 0, FLIGHT_TABLE[CARRIER_DELAY], 0))

Total Arrival Delay = SUMX(FLIGHT_TABLE, IF(FLIGHT_TABLE[CANCELLED]=0, FLIGHT_TABLE[C_ARR_DELAY], 0))

Total Departure Delay = SUMX(FLIGHT_TABLE, IF(FLIGHT_TABLE[CANCELLED]=0, FLIGHT_TABLE[C_DEP_DELAY], 0))

Total Flight Delay = [Total Arrival Delay] + [Total Departure Delay]

Total Cancelled Flights = CALCULATE(COUNTROWS(FLIGHT_TABLE),FLIGHT_TABLE[CANCELLED] =1)

Total Diverted Flights = CALCULATE(COUNTROWS(FLIGHT_TABLE), FLIGHT_TABLE[DIVERTED] = 1)

On-Time Performance Percentage = DIVIDE(CALCULATE(COUNTROWS(FLIGHT_TABLE), FLIGHT_TABLE[C_DEP_DELAY]<=0 && FLIGHT_TABLE[C_ARR_DELAY]<=0), [Total Flights], 0)

Cancellation Rate = DIVIDE([Total Cancelled Flights], [Total Flights],0)

Diversion Rate = DIVIDE([Total Diverted Flights], [Total Flights],0)

Average Ground Processing Time = AVERAGE(FLIGHT_TABLE[C_TAXI_IN]) + AVERAGE(FLIGHT_TABLE[TAXI_OUT])

Average Arrival Delay = AVERAGE(FLIGHT_TABLE[C_ARR_DELAY])

Average Departure Delay = AVERAGE(FLIGHT_TABLE[C_DEP_DELAY])

Average Late Aircraft Delay = AVERAGE(FLIGHT_TABLE[LATE_AIRCRAFT_DELAY])

Average NAS Delay = AVERAGE(FLIGHT_TABLE[NAS_DELAY])

Average Security Delay = AVERAGE(FLIGHT_TABLE[SECURITY_DELAY])

Average Weather Delay = AVERAGE(FLIGHT_TABLE[WEATHER_DELAY])

Average Carrier Delay = AVERAGE(FLIGHT_TABLE[CARRIER_DELAY])
